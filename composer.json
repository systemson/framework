{
    "name": "amber/framework",
    "description": "Amber Framework foundation components.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Deivi PeÃ±a",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amber\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.1",
        "phpdocumentor/phpdocumentor": "dev-master",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "test": "phpunit",
        "docs": [
            "phpdoc",
            "php sami.phar update samiConfig.php -v"
        ],
        "sniff": "phpcs --standard=PSR12 ./src",
        "fix-cs": "phpcbf --standard=PSR12 ./src",
        "speed": "php ./tests/Benchmark.php",
        "pull": [
            "git pull",
            "composer update -vvv"
        ],
        "full-check": [
            "@test",
            "@docs",
            "@sniff"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    }
}
